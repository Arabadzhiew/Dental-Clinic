@model Dental_Clinic.Models.AppointmentDetails

@{
    ViewData["Title"] = "Delete apointment";
}


<h3>Are you sure you want to delete the account of this dentist?</h3>
<h3 class="text-danger">This action is irreversible!</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dentist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dentist.FirstName) @Html.DisplayFor(model => model.Dentist.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.LastName)
        </dd>
        <dt class = "col-sm-2">
            Scheduled for
        </dt>
        <dd>
             @Html.DisplayFor(model => model.ScheduledFor.Day)/@Html.DisplayFor(model => model.ScheduledFor.Month)/@Html.DisplayFor(model => model.ScheduledFor.Year)
        </dd>
        @if (String.IsNullOrEmpty(Model.Description))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd> 
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
