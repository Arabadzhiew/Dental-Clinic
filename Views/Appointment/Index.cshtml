@model IEnumerable<Dental_Clinic.Models.AppointmentDetails>

@{
    ViewData["Title"] = "Appointments";
}

<h1>All appointments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dentist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                Scheduled for
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dentist.FirstName) @Html.DisplayFor(modelItem => item.Dentist.LastName) 
            </td>
            <td>@Html.DisplayFor(modelItem => item.Patient.FirstName) @Html.DisplayFor(modelItem => item.Patient.LastName) </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledFor.Day)/@Html.DisplayFor(modelItem => item.ScheduledFor.Month)/@Html.DisplayFor(modelItem => item.ScheduledFor.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Info", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
