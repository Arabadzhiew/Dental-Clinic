@model Dental_Clinic.Models.AppointmentForm

@{
    ViewData["Title"] = "Create appointment";
}

<h1>Create appointment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DentistId" class="control-label"></label>
                <input asp-for="DentistId" class="form-control" />
                <span asp-validation-for="DentistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledFor" class="control-label"></label>
                <input asp-for="ScheduledFor" type="date" class="form-control" />
                <span asp-validation-for="ScheduledFor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
