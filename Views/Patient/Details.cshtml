@model Dental_Clinic.Models.PatientDetails

@{
    ViewData["Title"] = "Patient profile";
}

<h1>Patient</h1>
<h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            Birth Date
        </dt>
        <dd class = "col-sm-10">
           @Html.DisplayFor(model => model.BirthDate.Day)/@Html.DisplayFor(model => model.BirthDate.Month)/@Html.DisplayFor(model => model.BirthDate.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dentist)
        </dt>
        <dd class = "col-sm-10">
            @Html.ActionLink($"{Model.Dentist.FirstName} {Model.Dentist.LastName}", "Details", "Dentist",new { id = Model.Dentist.Id})
        </dd>
    </dl>
</div>
